{
  "name": "cornerstone-insurance",
  "version": "1.0.0",
  "description": "Cornerstone Insurance - Bilingual (Chinese/English) insurance advisory website providing comprehensive insurance solutions in New Zealand",
  "homepage": "https://www.cornerstonefs.co.nz",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.3.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "autoprefixer": "^10.4.2",
    "cssnano": "^6.0.1",
    "postcss": "^8.4.5",
    "postcss-cli": "10.0.0",
    "postcss-import": "14.0.0",
    "tailwindcss": "^3.0.15",
    "terser": "^5.26.0"
  },
  "scripts": {
    "clean": "bundle exec jekyll clean",
    "js:minify": "npm run js:minify:calculators && npm run js:minify:search && npm run js:minify:wechat && npm run js:minify:gallery",
    "js:minify:calculators": "terser assets/js/calculators.js -o assets/js/calculators.min.js --compress --mangle --source-map",
    "js:minify:search": "terser assets/js/search.js -o assets/js/search.min.js --compress --mangle --source-map",
    "js:minify:wechat": "terser assets/js/wechat-modal.js -o assets/js/wechat-modal.min.js --compress --mangle --source-map",
    "js:minify:gallery": "terser assets/js/image-gallery.js -o assets/js/image-gallery.min.js --compress --mangle --source-map",
    "css:minify": "NODE_ENV=production postcss _site/assets/css/style.css -o _site/assets/css/style.min.css && cp _site/assets/css/style.min.css assets/css/style.min.css",
    "build": "bundle exec jekyll build",
    "build:prod": "npm run js:minify && JEKYLL_ENV=production bundle exec jekyll build && npm run css:minify",
    "dev": "bundle exec jekyll serve --livereload"
  },
  "author": "Cornerstone Insurance",
  "license": "MIT"
}
